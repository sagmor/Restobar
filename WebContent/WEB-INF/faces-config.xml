<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">

  <application>
    <message-bundle>resources.application</message-bundle>
    <locale-config>
      <default-locale>es</default-locale>
    </locale-config>
  </application>

  <managed-bean>
  	<managed-bean-name>TableBean</managed-bean-name>
  	<managed-bean-class>cl.uchile.cc68j.restobar.beans.TableBean</managed-bean-class>
  	<managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
  	<managed-bean-name>TableListBean</managed-bean-name>
  	<managed-bean-class>cl.uchile.cc68j.restobar.beans.TableListBean</managed-bean-class>
  	<managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  <navigation-rule>
  	<from-view-id>/tables/*</from-view-id>
  	<navigation-case>
  		<from-outcome>listTables</from-outcome>
  		<to-view-id>/tables/index.jsp</to-view-id>
  	</navigation-case>
  	<navigation-case>
  		<from-outcome>newTable</from-outcome>
  		<to-view-id>/tables/new.jsp</to-view-id>
  	</navigation-case>
  	<navigation-case>
  		<from-outcome>editTable</from-outcome>
  		<to-view-id>/tables/edit.jsp</to-view-id>
  	</navigation-case>
  	<navigation-case>
  		<from-outcome>deleteTable</from-outcome>
  		<to-view-id>/tables/delete.jsp</to-view-id>
  	</navigation-case>
  	<navigation-case>
  		<from-outcome>showTable</from-outcome>
  		<to-view-id>/tables/show.jsp</to-view-id>
  	</navigation-case>
  </navigation-rule>
  <navigation-rule>
  	<from-view-id>/tables/edit.jsp</from-view-id>
  	<navigation-case>
  		<from-outcome>valid</from-outcome>
  		<to-view-id>/tables/show.jsp</to-view-id>
  	</navigation-case>
  	<navigation-case>
  		<from-outcome>invalid</from-outcome>
  		<to-view-id>/tables/edit.jsp</to-view-id>
  	</navigation-case>
  </navigation-rule>
  <navigation-rule>
  	<from-view-id>/tables/new.jsp</from-view-id>
  	<navigation-case>
  		<from-outcome>valid</from-outcome>
  		<to-view-id>/tables/show.jsp</to-view-id>
  	</navigation-case>
  	<navigation-case>
  		<from-outcome>invalid</from-outcome>
  		<to-view-id>/tables/new.jsp</to-view-id>
  	</navigation-case>
  </navigation-rule>
  <navigation-rule>
  	<from-view-id>/tables/delete.jsp</from-view-id>
  	<navigation-case>
  		<from-outcome>delete</from-outcome>
  		<to-view-id>/tables/index.jsp</to-view-id>
  	</navigation-case>
  	<navigation-case>
  		<from-outcome>return</from-outcome>
  		<to-view-id>/tables/index.jsp</to-view-id>
  	</navigation-case>
  </navigation-rule>
  </faces-config>
